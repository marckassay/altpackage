{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build altpackage",
      "type": "npm",
      "script": "build:altpackage",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build altpack-harness",
      "type": "npm",
      "script": "build:harness",
      "group": "build"
    },
    {
      "label": "Watch 'lib/' for TypeScript",
      "type": "typescript",
      "tsconfig": "altpackage\\tsconfig.json",
      "option": "watch",
      "problemMatcher": [
        "$tsc-watch"
      ]
    },
    {
      "label": "Watch 'harness/' for TypeScript",
      "type": "typescript",
      "tsconfig": "altpackage\\harness\\tsconfig.json",
      "option": "watch",
      "problemMatcher": [
        "$tsc-watch"
      ]
    }
  ]
}
