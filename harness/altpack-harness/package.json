{
  "name": "altpack-harness",
  "version": "0.0.1",
  "license": "MIT",
  "repository": "https://github.com/marckassay/altpackage.git",
  "description": "Test harness for 'altpackage'",
  "author": "Marc Kassay <marckassay@gmail.com>",
  "private": true,
  "scripts": {
    "add:altpacks": "node node_modules/altpackage/dist/index.js",
    "remove:altpacks": "node node_modules/altpackage/dist/index.js --remove"
  },
  "altpackage": {
    "projectOutPath": "out",
    "packages": [
      {
        "name": "ionic",
        "location": "{yarn global bin}"
      },
      {
        "name": "cordova",
        "location": "{yarn global bin}"
      },
      {
        "name": "npm",
        "location": "{yarn global bin}",
        "adaptor": "*"
      }
    ]
  }
}
